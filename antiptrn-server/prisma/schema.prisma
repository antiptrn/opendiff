generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriptionTier {
  FREE
  CODE_REVIEW
  TRIAGE
  BYOK
}

enum SubscriptionStatus {
  INACTIVE
  ACTIVE
  CANCELLED
  PAST_DUE
}

enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

model User {
  id        String  @id @default(cuid())
  githubId  Int     @unique
  login     String
  name      String?
  email     String?
  avatarUrl String?

  // Legacy subscription fields (kept for migration, will be removed later)
  subscriptionTier      SubscriptionTier?
  subscriptionStatus    SubscriptionStatus?
  polarSubscriptionId   String?            @unique
  polarProductId        String?
  polarCustomerId       String?
  subscriptionExpiresAt DateTime?
  cancelAtPeriodEnd     Boolean?
  reviewsUsedThisCycle  Int?
  anthropicApiKey       String?
  customReviewRules     String?

  // Relations
  memberships OrganizationMember[]
  invitesSent OrganizationInvite[]
  auditLogs   AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Organization {
  id        String  @id @default(cuid())
  name      String
  slug      String  @unique
  avatarUrl String?

  // Subscription fields
  subscriptionTier      SubscriptionTier   @default(FREE)
  subscriptionStatus    SubscriptionStatus @default(INACTIVE)
  polarSubscriptionId   String?            @unique
  polarProductId        String?
  polarCustomerId       String?
  subscriptionExpiresAt DateTime?
  cancelAtPeriodEnd     Boolean            @default(false)
  seatCount             Int                @default(1)
  reviewsUsedThisCycle  Int                @default(0)
  anthropicApiKey       String?
  customReviewRules     String?

  // Relations
  members            OrganizationMember[]
  invites            OrganizationInvite[]
  repositorySettings RepositorySettings[]
  auditLogs          AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrganizationMember {
  id             String           @id @default(cuid())
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           OrganizationRole @default(MEMBER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

model OrganizationInvite {
  id             String           @id @default(cuid())
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String?
  token          String           @unique @default(cuid())
  role           OrganizationRole @default(MEMBER)
  status         InviteStatus     @default(PENDING)
  invitedById    String
  invitedBy      User             @relation(fields: [invitedById], references: [id])
  expiresAt      DateTime
  acceptedAt     DateTime?
  acceptedById   String?

  createdAt DateTime @default(now())

  @@index([organizationId])
  @@index([token])
  @@index([email])
}

model RepositorySettings {
  id             String        @id @default(cuid())
  owner          String
  repo           String
  enabled        Boolean       @default(true)
  triageEnabled  Boolean       @default(true)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  enabledById    String?
  // Keep userId temporarily for migration
  userId         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([owner, repo])
  @@index([organizationId])
}

model Review {
  id         String   @id @default(cuid())
  owner      String
  repo       String
  pullNumber Int
  reviewType String
  reviewId   BigInt?
  commentId  BigInt?
  createdAt  DateTime @default(now())

  @@index([owner, repo])
}

model AuditLog {
  id             String        @id @default(cuid())
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  userId         String?
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  action         String
  target         String?
  metadata       Json?
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime      @default(now())

  @@index([organizationId])
  @@index([userId])
  @@index([createdAt])
  @@index([action])
}
